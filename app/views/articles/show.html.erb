<h2><%= @article.title %></h2>
<p><%= @article.text %></p>
 
<p>Comments</p>

<% @article.comments.each do |comment| %>
	<p>
		<%= comment.author %>
		<br />
		<%= comment.body %>
		<hr />
	</p>
<% end %>
<p>Add comment</p>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %>
		<br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :body %>
		<br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>